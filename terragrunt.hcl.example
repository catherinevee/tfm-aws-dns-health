# Terragrunt configuration example for DNS Health Check module
# This file demonstrates how to use the module with Terragrunt

include "root" {
  path = find_in_parent_folders()
}

terraform {
  source = "git::https://github.com/your-org/tfm-aws-dns-health.git//?ref=v1.0.0"
}

inputs = {
  # Basic Configuration
  name_prefix       = "prod-api"
  environment      = "prod"
  primary_endpoint  = "api.primary.example.com"
  backup_endpoint   = "api.backup.example.com"
  
  # Health Check Configuration
  enable_health_checks = true
  health_check_type = "HTTPS"
  health_check_port = 443
  health_check_path = "/health"
  health_check_timeout = 5
  failure_threshold = 3
  request_interval = 30
  
  # DNS Configuration
  record_name = "api"
  record_type = "A"
  ttl = 300
  
  # Hosted Zone Configuration
  create_hosted_zone = false
  hosted_zone_id = "Z1234567890ABC"  # Use existing hosted zone
  
  # CloudWatch Alarms
  enable_cloudwatch_alarms = true
  alarm_threshold = 1.0
  alarm_evaluation_periods = 2
  
  # SNS Notifications
  enable_sns_notifications = true
  notification_email = "ops@example.com"
  
  # Tags
  tags = {
    Environment = "prod"
    Project     = "api-gateway"
    Owner       = "platform-team"
    CostCenter  = "engineering"
  }
} 